#!/usr/local/plan9/bin/rc

plan9=/usr/local/plan9
. $plan9/lib/acme.rc
font=/lib/font/bit/lucsans/unicode.8.font
path=($plan9/bin $home/.p9p/bin $home/bin $path)
editor=E

fn calendar {
	$plan9/bin/9 calendar
}

fn rc {
	$plan9/bin/9 rc
}

fn win {
	$plan9/bin/9 win rc -l
}

fn lnum { 
	awk '{print NR " " $0 }'
}

fn gl {
	grep -n $1 $*
}

fn gt {
	find . -name $1 | xargs grep -n $2
}

fn p9up {
	wd = `{pwd}
	cd $plan9
	hg pull -u
	cd $wd
	wd = ()
}
