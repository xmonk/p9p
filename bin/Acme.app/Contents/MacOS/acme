#!/usr/bin/env bash

cd "$HOME" || exit -1

if [ -f  "$HOME"/.bashrc ]; then
	. "$HOME"/.bashrc
fi

set -e
set -a args

len()
{
	echo "${#args[*]}"
}

PLAN9=${PLAN9:-/usr/local/plan9}
tabstop=4
p9plumb start

args[$(len)]="-a"

if [ -f "$HOME"/acme.dump ]; then
	args[$(len)]="-l $HOME/acme.dump"
else
	[ ! -z "$font" ] && args[$(len)]="-f $font"
	[ ! -z "$fixedfont" ] && args[$(len)]="-F $fixedfont"
fi

[ "$(len)" = "0" ] && unset args

acme ${args[*]}
unset args
