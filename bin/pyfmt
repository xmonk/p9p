#!/usr/bin/env rc

if(~ $#winid 0){
	echo "Acme is not running."
	exit
}
yapf=$home/Library/Python/2.7/bin/yapf
tab=$PLAN9/bin/tab

if(test -f $yapf)
	yapf=$home/Library/Python/2.7/bin/yapf
if not {
	yapf=$tab -n 4 -u
}

echo -n '1,$' | 9p write acme/$winid/addr
9p read acme/$winid/body | $yapf | 9p write acme/$winid/data
exit 0
