#!/usr/bin/env bash

set -e

status()
{
    ppid=$(/bin/ps ax | grep plumber | grep -v grep | awk '{print $1}')

    if [[ $ppid ]]; then
		echo "$ppid"
    fi
    unset ppid
}

start()
{
    if [ ! "$pid" ]; then
        "$PLAN9"/bin/9 plumber
        return $?
    fi
    return 0
}

stop()
{
	if [[ $pid ]]; then
		/bin/kill -9 "$pid" 2> /dev/null
	fi
	unset pid
	return $?
}

PLAN9=${PLAN9:-/usr/local/plan9}

if [ ! -x "$PLAN9"/bin/plumber ]; then
	#echo 2>&1 "Error: plumber does not exist, you might need to build plan9port"
	exit 1
fi

pid=$(status)

case $1 in
	start)
		start;;
	stop)
		stop;;
	status)
		echo "$pid";;
	restart)
		stop
		start;;
	*)
		echo 2>&1 "p9plumb [start | stop | restart | status ]"
		exit 1;;
esac
