#!/usr/bin/env bash

cd "$HOME" || exit -1

if [ -f  "$HOME"/.bashrc ]; then
	source "$HOME"/.bashrc
fi

set -e

PLAN9=${PLAN9:-/usr/local/plan9}
tabstop=4
p9plumb start

args=("-a")

if [ -f "$HOME"/acme.dump ]; then
	args+=("-l" "$HOME/acme.dump")
else
	[ ! -z "$font" ] && args+=("-f" "$font")
	[ ! -z "$fixedfont" ] && args+=("-F" "$fixedfont")
fi

acme "${args[@]}"
unset args
