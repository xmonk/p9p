#!/bin/bash

[ -d /usr/local/plan9 ] && export PLAN9=${PLAN9:-/usr/local/plan9}
#export PATH=$(puniq "$PATH:$PLAN9/bin:$HOME/.p9p/bin")
#export MANPATH=$(puniq "$MANPATH:$PLAN9/man")
#export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$PLAN9/lib

# Let gs find the plan9port document fonts.
export GS_FONTPATH=$PLAN9/postscript/font
# Make sure mpage prints in letter mode.
if [ $TERM = dumb ]; then
    # Plumb files instead of starting new editor.
    export EDITOR='E'
    unset FCEDIT VISUAL
    export MPAGE="-t -bLetter"
    # Get rid of backspace characters in Unix man output.
    export PAGER=nobs
else
    export EDITOR='emacs'
    export PAGER='less'
fi

if [ $(uname -s) = Darwin ]; then
	export BROWSER=google-chrome
else
	export BROWSER=chromium-browser
fi
export NAMESPACE=/tmp/ns.$(hostname -s)
# Prompt (is almost a no-op in bash)
export H=`hostname | sed 's/\..*//'`

# Equivalent variables for rc(1).
export home=$HOME
export prompt="$H=; 	"
export user=$USER
# Set geometry per host
if [ $H = quorra ]; then
	export GEOMETRY='1440x900@1,86'
elif [ $H = moon ]; then
	export GEOMETRY='1661x1109@1,86'
else
	export GEOMETRY='1280x800@1,86'
fi
# Set default font.
euro8=/lib/font/bit/lucsans/euro.8.font
dejavusansmono=$home/lib/font/DejaVuSansMono/12a/font
inconsolata=$home/lib/font/Inconsolata/14a/font
pelmeuro8=/lib/font/bit/pelm/euro.8.font
pelmunicode8=/lib/font/bit/pelm/unicode.8.font
unicode7=/lib/font/bit/lucsans/boldtypeunicode.7.font
unicode8=/lib/font/bit/lucsans/unicode.8.font
unicode9=/lib/font/bit/lucm/unicode.9.font
export font=$dejavusansmono
export fixedfont=$euro8

# if $NAMESPACE doesn't exist, we need to create it.
[ -d $NAMESPACE ] ||  mkdir $NAMESPACE

if [ $TERM = dumb ]; then
	_cd(){
		\cd "$@" &&
		case "TERM!$-" in
		linux!*)
			;;
		*!*i*)
			awd
		esac
	}
	alias cd=_cd
	set +o emacs
	set +o vi
	set -a # autoexport
	unset PROMPT_COMMAND
#	exec $PLAN9/bin/9 rc -il # comment this line to use bash
fi

# start your engines.
[ -x $HOME/.p9p/bin/p9plumb ] && $HOME/.p9p/bin/p9plumb start
[ -f $HOME/.bashrc.d/functions ] && . $HOME/.bashrc.d/functions
