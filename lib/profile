#!/usr/local/plan9/bin/rc

fn cd {
	flag i && builtin cd $* && awd
}

fn calendar {
	$plan9/bin/9 calendar
}

fn rc {
	$plan9/bin/9 rc
}

fn win {
	$plan9/bin/9 win rc -l
}

fn lnum { 
	awk '{print NR " " $0 }'
}

fn gl {
	grep -n $1 $*
}

fn gt {
	find . -name $1 | xargs grep -n $2
}

fn up {
	wd=`{pwd}
	if(~ $#1 0){
		echo "up [path]" 
		return 0
	}
	cd $1 || return 1
	if(test -e .git) git pull
	if(test -e .bzr) bzr pull
	if(test -e .hg)  hg pull -u
	if(test -e .svn) svn up
	if(test -e CVS)  cvs -q up -Pd
	cd $wd; wd = ()
}

prompt=':; '
plan9=/usr/local/plan9
path = ($plan9/bin /bin /usr/bin /usr/local/bin /sbin /usr/sbin /usr/local/sbin $home/bin $home/.p9p/bin)
. $plan9/lib/acme.rc
editor=/usr/local/plan9/bin/E
