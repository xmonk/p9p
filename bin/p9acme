#!/usr/bin/env bash

set -e

export PLAN9=${PLAN9:-/usr/local/plan9}
args=("-a")

# tabstop=4
# font=/mnt/font/AtkinsonHyperlegibleNext-Medium/16a/font,/mnt/font/AtkinsonHyperlegibleNext-Medium/32a/font
# font=/mnt/font/GoMedium/16a/font,/mnt/font/GoMedium/32a/font
# fixedfont=/mnt/font/BerkeleyMono-Medium/16a/font,/mnt/font/BerkeleyMono-Medium/32a/font
font=/mnt/font/BerkeleyMono-BoldCondensed/16a/font,/mnt/font/BerkeleyMono-BoldCondensed/32a/font
fixedfont=/mnt/font/GoMedium/16a/font,/mnt/font/GoMedium/32a/font

# setup our fonts
if [ -f "$HOME"/acme.dump ]; then
	args+=("-l" "$HOME/acme.dump")
else
	[ -n "$font" ] && args+=("-f" "$font")
	[ -n "$fixedfont" ] && args+=("-F" "$fixedfont")
fi

# setup screen geometry
[ -n "$GEOMETRY" ] && ARGS+=("-W" "$GEOMETRY")

# start plumber if not already running.
p9plumb start

"$PLAN9"/bin/9 acme "${args[@]}"
unset ARGS
